{#
/**
 * @file
 * Theme override to display a region.
 *
 * Available variables:
 * - content: The content for this region, typically blocks.
 * - attributes: HTML attributes for the region div.
 * - region: The name of the region variable as defined in the theme's
 *   .info.yml file.
 *
 * @see template_preprocess_region()
 *
 * @ingroup templates
 */
#}
{%
  set classes = [
    'region',
    'region-' ~ region|clean_class,
  ]
%}
{% if content %}

  <div class="container">
        <div class="row">
            <div class="o-footer">
                {#Begin Footer Social Bar#}
                <div class="container-fluid o-footer-top nopadding">
                     <div class="row">
                         <div class="col-md-12 nopadding">
                              {{ elements.theme_oab_hub_footersocialblock }}
                         </div>
                     </div>
                </div>
                <div class="container-fluid o-footer-top nopadding hidden-xs hidden-sm">
                    {% if elements|hub_getMenu('mainfooter') %}
                        {{ elements|hub_getMenu('mainfooter') }}
                    {% endif %}
                </div>

                {# GESTION SI LE CONTENU EST VIDE (par exemple, en ru, y a pas de menu finalement...; #}
                {% if elements.theme_oab_hub_bottomfooterbaren %}
                    {% set bottomfooterbar = elements.theme_oab_hub_bottomfooterbaren %}
                {% endif %}
                {% if elements.theme_oab_hub_bottomfooterbarfr %}
                    {% set bottomfooterbar =  elements.theme_oab_hub_bottomfooterbarfr %}
                {% endif %}

                {% if elements.theme_oab_hub_bottomfooterbarru %}
                    {% set bottomfooterbar =  elements.theme_oab_hub_bottomfooterbarru %}
                {% endif %}
                {% if elements.theme_oab_hub_bottomfooterbarruen %}
                    {% set bottomfooterbar =  elements.theme_oab_hub_bottomfooterbarruen %}
                {% endif %}
                {% if elements.theme_oab_hub_bottomfooterbares %}
                    {% set bottomfooterbar =  elements.theme_oab_hub_bottomfooterbares %}
                {% endif %}
                {% if elements.theme_oab_hub_bottomfooterbarbr %}
                    {% set bottomfooterbar =  elements.theme_oab_hub_bottomfooterbarbr %}
                {% endif %}
                {% if bottomfooterbar["#markup"]|render|trim is empty %}
                    {% set classSupp = "hidden" %}
                {% endif %}
                 <div class="footer-div-border {{ classSupp }}">
                    {{ bottomfooterbar }}
                 </div>


                {# GESTION SI LE CONTENU EST VIDE (par exemple, en en, y a pas de menu finalement...; #}
                {% if elements.theme_oab_hub_topnavbaren_2 %}
                    {% set topnavbar_2 = elements.theme_oab_hub_topnavbaren_2 %}
                {% endif %}
                {% if elements.theme_oab_hub_topnavbarfr_2 %}
                    {% set topnavbar_2 =  elements.theme_oab_hub_topnavbarfr_2 %}
                {% endif %}

                {% if elements.theme_oab_hub_topnavbarru_2 %}
                    {% set topnavbar_2 =  elements.theme_oab_hub_topnavbarru_2 %}
                {% endif %}
                {% if elements.theme_oab_hub_topnavbarruen_2 %}
                    {% set topnavbar_2 =  elements.theme_oab_hub_topnavbarruen_2 %}
                {% endif %}
                {% if elements.theme_oab_hub_topnavbares_2 %}
                    {% set topnavbar_2 =  elements.theme_oab_hub_topnavbares_2 %}
                {% endif %}
                {% if elements.theme_oab_hub_topnavbarbr_2 %}
                    {% set topnavbar_2 =  elements.theme_oab_hub_topnavbarbr_2 %}
                {% endif %}
                {% if topnavbar_2["#markup"]|render|trim is empty %}
                    {% set classSupp_topnavbar = "hidden" %}
                {% endif %}
                <div class="hidden-md hidden-lg container footer-div-border {{ classSupp_topnavbar }}">
                    <div id="login_block" >
                        {#Render the top navbar items#}
                        {{ topnavbar_2 }}
                    </div>

                </div>
                {# GESTION SI LE CONTENU EST VIDE  #}
                {% set toprightnavbar_footer = 0 %}
                {% if elements.theme_oab_hub_toprightnavbarfooteren %}
                    {% set toprightnavbar_footer = elements.theme_oab_hub_toprightnavbarfooteren %}
                {% endif %}
                {% if elements.theme_oab_hub_toprightnavbarfooterfr %}
                    {% set toprightnavbar_footer =  elements.theme_oab_hub_toprightnavbarfooterfr %}
                {% endif %}

                {% if elements.theme_oab_hub_toprightnavbarfooterru %}
                    {% set toprightnavbar_footer =  elements.theme_oab_hub_toprightnavbarfooterru %}
                {% endif %}
                {% if elements.theme_oab_hub_toprightnavbarfooterruen %}
                    {% set toprightnavbar_footer =  elements.theme_oab_hub_toprightnavbarfooterruen %}
                {% endif %}
                {% if elements.theme_oab_hub_toprightnavbarfooteres %}
                    {% set toprightnavbar_footer =  elements.theme_oab_hub_toprightnavbarfooteres %}
                {% endif %}
                {% if elements.theme_oab_hub_toprightnavbarfooterbr %}
                    {% set toprightnavbar_footer =  elements.theme_oab_hub_toprightnavbarfooterbr %}
                {% endif %}

                {% if toprightnavbar_footer["#markup"]|render|trim is empty %}
                    {% set classSupp_topnavbarfooter = "hidden" %}
                {% endif %}

                <div class="hidden-md hidden-lg container footer-div-border {{ classSupp_topnavbarfooter }}">

                    <div id="rightnavbar_footerblock">

                        {{ toprightnavbar_footer }}
                    </div>

                </div>
                <div class="hidden-md hidden-lg container footer-div-border">
                    <p >
                        Â© Orange Business Services {{ "now"|date("Y") }}
                    </p>
                </div>
          </div>

       </div>
</div>

{% endif %}