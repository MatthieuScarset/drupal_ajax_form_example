{#
/**
 * @file
 * Theme override to display a region.
 *
 * Available variables:
 * - content: The content for this region, typically blocks.
 * - attributes: HTML attributes for the region div.
 * - region: The name of the region variable as defined in the theme's
 *   .info.yml file.
 *
 * @see template_preprocess_region()
 *
 * @ingroup templates
 */
#}
{%
  set classes = [
    'region',
    'region-' ~ region|clean_class,
  ]
%}
{#{{ kint(elements) }}#}
{% if content %}
  <div{{ attributes.addClass(classes) }}>

      {#Begin Top Navbar Menu#}
      <div id="navtop">
        <nav id="top_navbar" class="navbar navbar-default">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#top-navbar-collapse">
                        <span class="sr-only">Menu</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                </div>

                <!-- Collect the nav links, forms, and other content for toggling -->
                <div id="top-navbar-collapse" class="collapse navbar-collapse">

                    <ul class="hidden-lg hidden-md hidden-sm nav navbar-nav nav-menu">
                        {#TODO : insert here a divider to separate sections#}
                        {#Render the main mega menu items in the top navbar #}
                        {#only to display them when collapsed #}
                        {{ elements.theme_boosted_navigationprincipale.content }}

                    </ul>

                     <ul class="nav navbar-nav">
                        {#Render the top navbar items#}
                        {{ elements.topnavbarmenu.content }}
                    </ul>

                    <ul class="nav navbar-nav navbar-right">
                        {#TODO : insert here a divider to separate sections#}
                        {#Render the top account items on the right#}
                        {{ elements.menuducomptedelutilisateur.content }}
                    </ul>

                </div><!-- /.navbar-collapse -->
            </div><!-- /.container-fluid -->
        </nav>
      </div>
      {#End Top navbar#}

      {#Begin Main Mega Menu#}
      <nav id="main_nav" class="navbar subnav navbar-inverse mega-menu navbar-fixed-top" role="navigation">
          <div class="container">
              <!-- Brand and toggle get grouped for better mobile display -->
              <div class="navbar-header">
	              {% if elements.sitebranding %}
                  {{ elements.sitebranding }}
	              {% endif %}
              </div>

              <!-- Collect the nav links, forms, and other content for toggling -->
              <div class="collapse navbar-collapse" id="navbar-collapse-mega">
                  <ul class="nav navbar-nav nav-menu">
                      {#Render the main mega menu items in the top navbar #}
                      {{ elements.theme_boosted_navigationprincipale.content }}
                  </ul>
              <div class="nav navbar-nav navbar-right">
                     {{ elements.theme_boosted_righticonsmenu.content }}
              </div>
              </div><!-- /.navbar-collapse -->

          </div><!-- /.container-fluid -->
      </nav>
      {#End Main Mega Menu#}

  </div>
{% endif %}
