{% macro mega_menu_items(title, items) %}
   <li>
       <div id="items_megamenu" class="row">
           <h2>{{ title }}</h2>
           {% for item in items %}
               {% set link_target = item.url.options.target ? '_blank' : '_self'  %}
               <div class="col-sm-4 col-md-4">
                   <h3>{{ item.title }}</h3>
                   {% if item.below %}
                       <ul id="sous-items">
                           {% for sous_item in item.below %}
                               <li>
                                   {{ link(sous_item.title, sous_item.url, {'target': link_target}) }}
                               </li>
                           {% endfor %}

                        </ul>
                    {% endif %}
               </div>
           {% endfor %}
       </div>
   </li>
{% endmacro %}



