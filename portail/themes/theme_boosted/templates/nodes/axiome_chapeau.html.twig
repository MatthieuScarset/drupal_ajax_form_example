    </div>

    <div class="col col-md-12 nopadding image">
        <img src="/sites/default/files/axiome/fiches/{{ id_fiche }}{{ field_header.image.url_archive }}" alt="{{ field_header.image.balise_alt }}" />
    </div>

</div>
{% endif %}