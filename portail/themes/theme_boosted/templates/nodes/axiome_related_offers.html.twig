{% if (related_offers.offer1_custom_link|trim is not empty and related_offers.offer1_url|trim is not empty)
   or (related_offers.offer2_custom_link|trim is not empty and related_offers.offer2_url|trim is not empty)
   or (related_offers.offer3_custom_link|trim is not empty and related_offers.offer3_url|trim is not empty)
%}
<div class="node-axiome-know-more">
    <div class="col col-md-12 nopadding">
        <h2 class="titre2">{{ 'Offres connexes'|t }}</h2>
    </div>
    <div class="col col-md-12 nopadding">
        <ul>
            {% if related_offers.offer1_url|trim is not empty and related_offers.offer1_custom_link|trim is not empty %}
                <li><a href="{{ related_offers.offer1_url|url_clean_prefix }}" target="_blank">{{ related_offers.offer1_custom_link }}</a></li>
            {% endif %}
            {% if related_offers.offer2_url|trim is not empty and related_offers.offer2_custom_link|trim is not empty %}
                <li><a href="{{ related_offers.offer2_url|url_clean_prefix }}" target="_blank">{{ related_offers.offer2_custom_link }}</a></li>
            {% endif %}
            {% if related_offers.offer3_url|trim is not empty and related_offers.offer3_custom_link|trim is not empty %}
                <li><a href="{{ related_offers.offer3_url|url_clean_prefix }}" target="_blank">{{ related_offers.offer3_custom_link }}</a></li>
            {% endif %}
        </ul>
    </div>
</div>
{% endif %}