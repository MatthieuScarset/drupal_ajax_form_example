{#
/**
 * @file
 * Theme override to display a region.
 *
 * Available variables:
 * - content: The content for this region, typically blocks.
 * - attributes: HTML attributes for the region div.
 * - region: The name of the region variable as defined in the theme's
 *   .info.yml file.
 *
 * @see template_preprocess_region()
 *
 * @ingroup templates
 */
#}
{%
  set classes = [
    'region',
    'region-' ~ region|clean_class,
  ]
%}
{#{{ kint(elements) }}#}
{% if content %}
  <div{{ attributes.addClass(classes) }}>

      {#Begin Top Navbar Menu#}
      <div class="hidden-xs ">
          <div id="navtop">
              <nav id="top_navbar" class="navbar navbar-default container">
                  <div class="container">
                      <div class="navbar-header hidden">
                          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#top-navbar-collapse">
                              <span class="sr-only">Menu</span>
                              <span class="icon-bar"></span>
                              <span class="icon-bar"></span>
                              <span class="icon-bar"></span>
                          </button>
                      </div>

                      <!-- Collect the nav links, forms, and other content for toggling -->
                      <div id="top-navbar-collapse" class="collapse navbar-collapse">
                          <div class="hidden-lg hidden-md nav navbar-nav nav-menu">
                              {#TODO : insert here a divider to separate sections#}
                              {#Render the main mega menu items in the top navbar #}
                              {#only to display them when collapsed #}
                              {% if elements.mainnavigationen %}
                                  {{ elements.mainnavigationen }}
                              {% endif %}
                              {% if elements.mainnavigationfr %}
                                  {{ elements.mainnavigationfr }}
                              {% endif %}
                              {% if elements.mainnavigationru %}
                                  {{ elements.mainnavigationru }}
                              {% endif %}
                              {% if elements.mainnavigationruen %}
                                  {{ elements.mainnavigationruen }}
                              {% endif %}
                          </div>

                          <div id="login_block" class="nav navbar-nav">
                              {#Render the top navbar items#}
                              {% if elements.topnavbarfr %}
                                  {{ elements.topnavbarfr }}
                              {% endif %}
                              {% if elements.topnavbaren %}
                                  {{ elements.topnavbaren }}
                              {% endif %}
                              {% if elements.topnavbarru %}
                                  {{ elements.topnavbarru }}
                              {% endif %}
                              {% if elements.topnavbarruen %}
                                  {{ elements.topnavbarruen }}
                              {% endif %}
                              {% if elements.topnavbares %}
                                  {{ elements.topnavbares }}
                              {% endif %}
                              {% if elements.topnavbarbr %}
                                  {{ elements.topnavbarbr }}
                              {% endif %}
                          </div>

                          <div class="nav navbar-nav navbar-right">
                              {#TODO : insert here a divider to separate sections#}
                              {#Render the top account items on the right#}
                              {% if elements.toprightnavbarfr %}
                                  {{ elements.toprightnavbarfr }}
                              {% endif %}
                              {% if elements.toprightnavbaren %}
                                  {{ elements.toprightnavbaren }}
                              {% endif %}
                              {% if elements.toprightnavbarru %}
                                  {{ elements.toprightnavbarru }}
                              {% endif %}
                              {% if elements.toprightnavbarruen %}
                                  {{ elements.toprightnavbarruen }}
                              {% endif %}
                          </div>
                      </div><!-- /.navbar-collapse -->
                  </div><!-- /.container-fluid -->
              </nav>
          </div>
      </div>
      {#End Top navbar#}

      {#Begin Main Mega Menu#}
      {#<nav id="main_nav" class="navbar subnav navbar-inverse mega-menu navbar-fixed-top" role="navigation">#}
      <nav id="main_nav" class="navbar subnav mega-menu" role="navigation">
          <div class="container-fluid-navbar">
              <!-- Brand and toggle get grouped for better mobile display -->
              <div class="hidden-lg pull-right menu-xs" >
                  <div class="menu-loupe-xs">
                      {{ elements.righticonblock }}
                  </div>
                  <button type="button" class="sandwich-button navbar-toggle " data-toggle="collapse" data-target="#navbar-collapse-mega">
                      <i class="fa fa-times close-env-info" aria-hidden="true"></i>
                      <span class="sr-only">Menu</span>
                      <span class="icon-bar"></span>
                      <span class="icon-bar"></span>
                      <span class="icon-bar"></span>
                  </button>
              </div>
              <div class="navbar-header logo">
                  {% if elements.theme_boosted_branding %}
                      {{ elements.theme_boosted_branding }}
                  {% endif %}
              </div>



              <!-- Collect the nav links, forms, and other content for toggling -->
              <div class="collapse navbar-collapse navbar-inverse" id="navbar-collapse-mega">
              	{#Render the main mega menu items in the top navbar #}

                <div class="nav navbar-nav nav-menu">
                    {% if elements.mainnavigationfr %}
                        {{ elements.mainnavigationfr }}
                    {% endif %}

                    {% if elements.mainnavigationen %}
                        {{ elements.mainnavigationen }}
                    {% endif %}

                    {% if elements.mainnavigationru %}
                        {{ elements.mainnavigationru }}
                    {% endif %}

                    {% if elements.mainnavigationruen %}
                        {{ elements.mainnavigationruen }}
                    {% endif %}
                </div>

                <div class="nav navbar-nav navbar-right hidden-xs hidden-sm hidden-md">
                    {{ elements.righticonblock }}
                </div>

              </div><!-- /.navbar-collapse -->
          </div><!-- /.container-fluid -->
      </nav>
      {#End Main Mega Menu#}

  </div>
{% endif %}
