<div class="container">
  <button class="btn_print_accords_obl btn btn-primary"> Imprimer au format pdf </button>
</div>

{#for print#}
<span class="obl_accords_techno_selected">{{ 'Couverture ' ~ techno_for_print }}</span>

<br/>

<div class="container">

    <div class="col-md-9 col-lg-9 col-sm-9 order-2">
      <table border="1" width="100%" id="table-accord-roaming">
        <thead style="background: #F6F6F6" class="thead-table-accord-romaing">
            <th scope="col">Destination</th>
            <th scope="col">Zone</th>
            <th scope="col">Op√©rateur</th>
        </thead>
        <tbody>
          {% for country, row in detail_accords %}
            <tr>
              <td>{{ country }}</td>
              <td>{{ row.0.zone }}</td>
              <td>
                {% for operator in row %}
                  {{ operator.operator }}
                  {% if not loop.last %}
                    <hr class="reseau-mobile-accords-roaming" >
                  {% endif %}
                {% endfor %}
              </td>
            </tr>
          {% endfor %}
        </tbody>
      </table>

      <div class="row div_btn_obl_accords_perv_next">
            {% if page > 1 %}
              <a class="btn btn-default btn_previous_obl_accords" href="{{ url('oab_obl_settings', {'page': page-1, 'techno': techno}) }}">{{ 'Previous page'|t }}</a>
            {% else %}
              <a class="btn btn-default btn_previous_obl_accords disabled">{{ 'Previous page'|t }}</a>
            {% endif %}

      {% if (page >= max_limit_page or detail_accords is empty) %}
        <a class="btn btn-default btn_next_obl_accords disabled">{{ 'Next page'|t }}</a>
      {% else %}
        <a class="btn btn-default btn_next_obl_accords" href="{{ url('oab_obl_settings', {'page': page+1, 'techno': techno}) }}">{{ 'Next page'|t }}</a>
      {% endif %}
    </div>

  </div>

  <div class="col-xs col-md-3 searchaccordspricebycountryobl">
    {{ drupal_entity('block','searchaccordspricebycountryobl', check_access=false) }}
  </div>

</div>
