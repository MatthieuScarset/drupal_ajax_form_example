function oabt_taxoAddDescription($termId, $text){
    $query = \Drupal::entityQuery('taxonomy_term');
    $query->condition('tid', $termId);
    $entity = $query->execute();
    if(isset($entity)) {
        foreach($entity as $tid) {
            // on update le champ description
            $termUpdate = \Drupal\taxonomy\Entity\Term::load($tid);
            $termUpdate->set('description', $text);
            $termUpdate->save();
        }
    }
}

