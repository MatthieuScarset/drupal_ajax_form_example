{#
/**
 * @file
 * Default theme implementation for a breadcrumb trail.
 *
 * Available variables:
 * - breadcrumb: Breadcrumb trail items.
 *
 * @ingroup templates
 */
#}
{% if breadcrumb %}
  <div class="breadcrumb-page-press">
    <ol class="breadcrumb">
      {% for item in breadcrumb %}
        <li {{ item.attributes }}>
          {% if item.url %}
            {% if loop.first %}
              <a href="{{ item.url }}" class="icon-home" title="{{ item.text }}"></a>
            {% else %}
              <a href="{{ item.url }}">{{ item.text }}</a>
            {% endif %}
          {% else %}
            {{ item.text }}
          {% endif %}
        </li>
      {% endfor %}
    </ol>
  </div>
{% endif %}
