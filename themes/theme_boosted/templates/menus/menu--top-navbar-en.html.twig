{#
/**
 * @file
 * Default theme implementation to display a menu.
 *
 * Available variables:
 * - menu_name: The machine name of the menu.
 * - items: A nested list of menu items. Each menu item contains:
 *   - attributes: HTML attributes for the menu item.
 *   - below: The menu item child items.
 *   - title: The menu link title.
 *   - url: The menu link url, instance of \Drupal\Core\Url
 *   - localized_options: Menu link localized options.
 *
 * @ingroup templates
 */
#}
{% import _self as menus %}
{{ menus.menu_links(items, attributes, 0) }}
{% macro menu_links(items, attributes, menu_level) %}
  {% import _self as menus %}
  {% if items %}
    {% if menu_level == 0 %}
<ul class="hidden-md hidden-lg">
  <div class="join-text">
    <p>{{ "Join website"|t }}</p>
  </div>

  {% for item in items %}
    {% if menu_level == 0 and item.is_expanded %}
      {% if item.below %}
        {% for item in item.below %}
          <li class="items-top-navbar-mobile">
            <a class="o-link-arrow" href="{{ item.url }}">{{ item.title }} </a>
          </li>
        {% endfor %}
      {% endif %}
    {% endif %}
  {% endfor %}
</ul>

<ul class="menu nav navbar-nav visible-md visible-lg">
  {% else %}
  <ul{{ attributes.addClass('dropdown-menu','navbar-en') }}>
    {% endif %}
    {% for item in items %}
      {% set link_target = item.url.options.target ? '_blank' : '_self' %}
      {% if menu_level == 0 and item.is_expanded %}
      <li{{ item.attributes.addClass('expanded', 'dropdown') }}>
        <a href="{{ item.url }}" class="dropdown-toggle" data-toggle="dropdown" target="{{ link_target }}"
           onmousedown="utag_link(utag_data.titre_page, 'Header', '{{ item.title }}', '');">{{ item.title }} <span
            class="caret"></span></a>
      {% else %}
        <li>{{ link(item.title, item.url, {'target': link_target, 'onmousedown': 'utag_link(utag_data.titre_page, \'Header\', \'' ~ item.title ~ '\', \'\');'}) }}
      {% endif %}
      {% if item.below %}
        {{ menus.menu_links(item.below, attributes.removeClass('nav'), menu_level + 1) }}
      {% endif %}
      </li>
    {% endfor %}
  </ul>
  {% endif %}
  {% endmacro %}
