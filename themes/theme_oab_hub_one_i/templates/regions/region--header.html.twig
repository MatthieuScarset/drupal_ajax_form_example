{#
/**
 * @file
 * Theme override to display a region.
 *
 * Available variables:
 * - content: The content for this region, typically blocks.
 * - attributes: HTML attributes for the region div.
 * - region: The name of the region variable as defined in the theme's
 *   .info.yml file.
 *
 * @see template_preprocess_region()
 *
 * @ingroup templates
 */
#}
{% set classes = [
  'region',
  'region-' ~ region|clean_class,
  'site-width'
] %}

{% if content %}

  <div{{ attributes.addClass(classes) }}>
    <div class="container-fluid">
      {# Begin Top Navbar Menu #}
      <nav class="navbar navbar-dark bg-dark navbar-expand-md supra" aria-label="Top Navbar">
          {{ elements|hub_getMenu('theme_oab_hub_one_i_mssassistancetopnavbarfr') }}

          <div class="top_right_links">
            {{ elements|hub_getMenu('theme_oab_hub_one_i_mssassistancetoprightnavbarfr') }}
            {% if elements.theme_oab_hub_one_i_siuhellouserblock %}
              {{ elements.theme_oab_hub_one_i_siuhellouserblock }}
            {% endif %}
          </div>
      </nav>
      {# End Top navbar #}

      {# Begin Main Mega Menu #}
      <nav id="main_nav" class="main_nav navbar navbar-expand-lg navbar-dark bg-dark" role="navigation"
           aria-label="Main navigation">

          <div class="navbar-brand">
            {% if elements.theme_oab_hub_one_i_branding %}
              {{ elements.theme_oab_hub_one_i_branding }}
            {% endif %}
          </div>

          <div class="mega-menu-desktop d-none collapse">
            {{ elements|hub_getMenu('theme_oab_hub_one_i_mssassistancemainmenufr') }}
          </div>
      </nav>
      {# End Main Mega Menu - Desktop #}
    </div>
  </div>

{% endif %}
