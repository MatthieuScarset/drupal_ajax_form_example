{%
  set classes = [
  'field',
  'field--name-' ~ field_name|clean_class,
  'field--type-' ~ field_type|clean_class,
  'field--label-' ~ label_display,
]
%}

{% if 1 == items|length %}
  <div{{ attributes.addClass(classes,"container-fluid", "site-width", "row", "mt-4", "mb-2", "my-md-4", "position-relative") }}>
    {% if items.0.content["#paragraph"].field_video|length != 1 %}
    <img class="d-block testimonial-left-img" src="/themes/theme_one_i/assets/image/Illustrations-temoignagnes.png" alt="illustration temoignage left">
    <div class="col-12 col-md-9 offset-md-3">
    {% else %}
      <div class="col-12 px-0">
    {% endif %}
        <div class="row">
          {{ items.0.content }}
        </div>
    </div>
    {% if items.0.content["#paragraph"].field_video|length == 1 %}
    <img class="d-none d-md-block testimonial-right-img" src="/themes/theme_one_i/assets/image/Illustrations-temoignages-2.png" alt="illustration temoignage right">
    {% endif %}
  </div>
{% else %}
  <div {{ attributes.addClass(classes,"row", "container-fluid", "site-width", "position-relative", "mt-4","mb-md-4", "pl-1", "pr-0") }}>
    <img class="testimonial-left-img" src="/themes/theme_one_i/assets/image/Illustrations-temoignagnes.png" alt="illustration temoignage left">
    <div class="col-12 col-md-9 offset-md-3 mt-4 mt-md-0 pr-0">
      <div class="row overflow-auto testimonial-item-container slider-container">
        {% for item in items %}
          {% if loop.first %}
            <div {{ item.attributes.addClass('field--item', 'col-10', 'col-md-6', 'px-0') }}>
              {{ item.content }}
            </div>
          {% else %}
            <div {{ item.attributes.addClass('field--item','col-10', 'col-md-6', 'offset-1', 'px-0') }}>
              {{ item.content }}
            </div>
          {% endif %}
        {% endfor %}
      </div>
    </div>
  </div>
{% endif %}
