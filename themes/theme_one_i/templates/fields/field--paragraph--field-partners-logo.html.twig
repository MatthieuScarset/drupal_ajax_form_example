<div class="row partners-container slider-container">
  {% for item in items %}
    {% if 1 == items|length %}
      <div {{ item.attributes.addClass('col-12', 'd-flex', 'justify-content-center', 'pr-0', 'm-auto') }}>{{ item.content }}</div>
    {% elseif 2 == items|length %}
      <div {{ item.attributes.addClass('col-6', 'd-flex', 'justify-content-between', 'pr-0', 'm-auto') }}>{{ item.content }}</div>
    {% elseif 3 == items|length %}
      <div {{ item.attributes.addClass('col-4', 'd-flex', 'justify-content-between', 'pr-0', 'm-auto') }}>{{ item.content }}</div>
    {% else %}
      <div {{ item.attributes.addClass('col-6', 'col-md-3', 'pr-0', 'my-auto', 'mr-3', 'mr-md-4') }}>{{ item.content }}</div>
    {% endif %}
  {% endfor %}
</div>
