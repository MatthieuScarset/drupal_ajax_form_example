{% if (is_single) %}
  <div class="liste-offres my-1">
    {% for item in items %}
      <div class="d-flex align-items-center">
        {{ item.content }}
      </div>
    {% endfor %}
  </div>

{% else %}

  <span class="font-weight-bold">{{ label }}</span>
  <div class="liste-offres my-1 pl-1">
    {% for item in items %}
      <div class="d-flex align-items-center">
        {{ item.content }}
      </div>
    {% endfor %}
  </div>

{% endif %}

