                  <a class="d-flex d-md-inline flex-column align-items-center contactbar-link" href="{{ content.link_assistance }}">
                      <span class="icon icon-assistance" aria-hidden="true"></span>
                      <span>{{ content.link_assistance_text }}</span>
                  </a>
              </div>
              <div class="col-4 p-1 text-center" style="margin-top: 6px">
                  <a class="d-flex d-md-inline flex-column align-items-center contactbar-link" href="{{ content.link_ecrire }}">
                      <span class="icon icon-email" aria-hidden="true"></span>
                      <span>{{ content.link_ecrire_text }}</span>
                  </a>
              </div>
              <div class="col-4 p-1 text-center">
                   <span class="wrapper_numero">
                       <span class="numero"><a href="tel:+33800018028">0 800 018 028</a></span>
                        <span class="helper_numero">
                            <span class="icon icon-Play"></span>
                            Service & appel <br/> gratuits
                        </span>
                    </span>
                </div>
                <div class="clear"></div>
           </div>
    </div>
  {% endblock %}
</section>

