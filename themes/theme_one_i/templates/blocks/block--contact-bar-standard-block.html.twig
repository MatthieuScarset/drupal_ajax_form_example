                </div>
                <span class="o-link-arrow align-self-end mb-2 mr-2"></span>
              </div>
            </a>
            <a class="btn btn-primary btn-inverse p-1 w-100 border-bottom" href="{{ content.link_ecrire }}">
              <div class="d-inline-flex">
                <span class="icon icon-email ml-1 pr-1 contact-item-icon" aria-hidden="true"></span>
                <div class="d-flex flex-column text-left">
                  <span class="font-weight-bold pb-1">{{ content.link_ecrire_text }}</span>
                  <span class="contact-item-descr">Lorem ipsum dolor sit amet, consectetur adipiscing elit.</span>
                </div>
                <span class="o-link-arrow align-self-end mb-2 mr-2"></span>
              </div>
            </a>
            <a class="btn btn-primary btn-inverse p-1 w-100" href="{{ content.link_contact }}">
              <div class="d-inline-flex">
                <span class="icon icon-control-centre ml-1 pr-1 contact-item-icon" aria-hidden="true"></span>
                <div class="d-flex flex-column text-left">
                  <span class="font-weight-bold pb-1">{{ content.link_contact_text }}</span>
                  <span class="contact-item-descr">Lorem ipsum dolor sit amet, consectetur adipiscing elit.</span>
                </div>
                <span class="o-link-arrow align-self-end mb-2 mr-2"></span>
              </div>
            </a>
          </div>
      </div>

