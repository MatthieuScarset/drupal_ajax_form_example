{% if not is_numerical %}
  <div class="row mt-1">
    <div class="col-12 my-2">
      <span class="icon icomoon {{ content.field_icon.0['#context']['value']|token_replace }} text-primary bg-gray2 rounded-circle benefits-item-icon" aria-hidden="true"></span>
    </div>
    <div class="col-12">
      <div class="row">
        <h3 class="col-12 lead font-weight-bold mb-0">
          {{ content.field_title }}
        </h3>
        <span class="col-12 text-gray3 pt-O">
        {{ content.field_description }}
      </span>
      </div>
    </div>
  </div>
{% else %}
  <div class="row mt-2">
    <div class="col-12 d-flex justify-content-md-center my-2">
      <span class="icon icomoon {{ content.field_icon.0['#context']['value']|token_replace }} text-primary bg-gray2 rounded-circle benefits-item-icon" aria-hidden="true"></span>
    </div>
    <div class="col-12">
      <div class="row benefits-numerical-item-container">
        <h3 class="col-12 mb-0">
          {{ content.field_title }}
        </h3>
        <span class="col-12 lead text-gray3 pt-0 px-md-2">
        {{ content.field_description.0 }}
      </span>
      </div>
    </div>
  </div>
{% endif %}
