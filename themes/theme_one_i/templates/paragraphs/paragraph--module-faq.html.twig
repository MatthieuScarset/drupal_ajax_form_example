
{% block paragraph %}
  <div {{ attributes.addClass("mb-3", "mb-md-5", "site-width") }}>
    <div class="container-fluid">
      {% block content %}
      <div class="col-12 pr-md-0 pr-md-1">
        <div class="row bg-warning  pr-0 pl-1 pl-md-0">
          <div class="col-12 col-md-5 offset-md-1 px-0 px-md-1 pt-md-3 pb-2">
            <div class="row">
              <h2 class="h1 col-6 col-md-12 mb-0 pb-1 pt-3 pt-md-0">{{ content.field_title }}</h2>
              <div class="col-6 d-flex d-md-none justify-content-end">
                {% for image in content.field_visual if image.entity is defined  %}
                  {% set media = image.entity %}
                  {% set file = media.field_image.entity %}
                  {% set uri = file.uri.value %}
                  {% if uri is not null and media.name.value is not null %}
                    <img src="{{ uri|image_style_uri('modular_product_mobile_image_faq') }}" alt="{{ media.name.value }}"/>
                  {% endif %}
                {% endfor %}
              </div>
            </div>
            <div class="d-inline-flex flex-row pb-2 pr-2 pr-md-0">{{ faq_description | nl2br }}</div>
            <button class="btn btn-primary mr-1 mb-1 mb-md-0" type="button" data-toggle="modal"
                    onmousedown="utag_link(utag_data.titre_page,'aller plus loin' ,'faq','voir les questions frÃ©quentes')"
                    data-target="#faqModal">{{ content.field_function }}</button>
          </div>
          <div class="col-6 d-none d-md-block faq-visual">
              {{ content.field_visual }}
          </div>
        </div>
      </div>
    {% endblock %}
    </div>
  </div>
{% endblock %}


<div class="modal modal-faq fade" id="faqModal" tabindex="-1" role="dialog" aria-labelledby="faqModalTitle" aria-hidden="true">
  <div class="modal-dialog my-md-0 h-100 w-100" role="document">
    <div class="modal-content mt-4 mt-md-0 pt-md-5 h-100">
      <div class="modal-header ">
        <button type="button" class="close" data-dismiss="modal" aria-label="Fermer">
          <span class="icon icon-delete" aria-hidden="true"></span>
        </button>
        <button type="button" class="close o-link-arrow o-link-small back" data-dismiss="modal">Fermer</button>
      </div>
      <div class="modal-body mh-100">
        <h3 id="faqModalTitle" class="h2 no-signature d-flex flex-column flex-md-row pb-0">
          <span class="icon icon-Orange-Assistant2 text-primary pb-1 pb-md-0 pr-md-2" aria-hidden="true"></span>
          {{ content.field_panel_title }}
        </h3>
        <div class="question-answer mb-4 mb-md-5">
          {{ content.field_faq_items }}
        </div>
      </div>
    </div>
  </div>
</div>
