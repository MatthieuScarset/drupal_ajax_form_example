{% block paragraph %}
  <div {{ attributes.addClass("my-md-5", "container-fluid", "site-width") }}>
    {% block content %}
      <div class="col-12 pr-0 pr-md-1">
        <div class="text-gray3 font-weight-bold pb-3 mb-0">{{ "Aller plus loin"|t }}</div>
        <div class="row bg-warning">
          <div class="col-5 offset-1 py-3">
            <h2 class="no-signature mb-0 pb-1">{{ content.field_title }}</h2>
            <div class="d-inline-flex flex-row pb-2">{{ content.field_highlight }}</div>
            <button class="btn btn-primary mr-1 mb-1" type="button" data-toggle="modal" data-target="#faqModal">{{ content.field_function }}</button>
          </div>
          <div class="col-6">Image</div>
        </div>
      </div>
    {% endblock %}
  </div>
{% endblock %}


<div class="modal modal-faq fade" id="faqModal" tabindex="-1" role="dialog" aria-labelledby="faqModalTitle" aria-hidden="true">
  <div class="modal-dialog w-100 h-100 my-0" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close text-right d-none d-md-block my-2" data-dismiss="modal" aria-label="Fermer">
          <span aria-hidden="true">Ã—</span>
        </button>
        <button type="button" class="close d-md-none o-link-arrow o-link-small back" data-dismiss="modal">Retour</button>
      </div>
      <div class="modal-body row">
        <h2 id="faqModalTitle" class="col-12 no-signature d-inline-flex">
          <span class="icon icon-Orange-Assistant2 text-primary pr-2" aria-hidden="true"></span>
          {{ content.field_panel_title }}
        </h2>
        <div class="col-12">
          {{ content.field_faq_items }}
        </div>
      </div>
    </div>
  </div>
</div>
