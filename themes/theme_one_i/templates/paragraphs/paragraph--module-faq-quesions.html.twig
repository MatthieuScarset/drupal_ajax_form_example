{% block paragraph %}
  <div class="card-header col-12">
    <a id="question-{{ paragraph.id() }}"
       class="collapsed"
       data-toggle="collapse"
       onmousedown="utag_link(utag_data.titre_page,'aller plus loin','faq','{{ content.field_question.0['#context']['value']|escape('html') }}')"
       data-target="collapseQuestion-{{ paragraph.id() }}"
       href="#collapseQuestion-{{ paragraph.id() }}"
       role="button"
       aria-expanded="false">
      <div class="accordion-card-title py-1">
        <div class="accordion-title text-decoration-none">
          {{ content.field_question }}
        </div>
        <span class="accordion-icon" aria-hidden="true"></span>
      </div>
    </a>
  </div>
  <div id="collapseQuestion-{{ paragraph.id() }}"
       class="collapse col-12 px-0 pt-1"
       aria-labelledby="question-{{ paragraph.id() }}">
    <div class="accordion-card-body standard">
      {{content.field_answered}}
    </div>
  </div>
{% endblock %}
