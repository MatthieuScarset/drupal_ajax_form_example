{#
/**
 * @file
 * Theme override for a select element.
 *
 * Available variables:
 * - attributes: HTML attributes for the select tag.
 * - options: The option element children.
 *
 * @see template_preprocess_select()
 */
#}
{% spaceless %}

  {% set is_value_empty = false %}
  {% for option in options %}
    {% if option.value == 'all' and option.selected %}
      {% set is_value_empty = true %}
    {% endif %}
  {% endfor %}
  {%
    set classes = [
      'form-control',
      is_value_empty ? 'form-control-empty'
    ]
  %}
{#  {{ kint_t(attributes, options) }}#}

  <select{{ attributes.addClass(classes) }} data-ob1-component="FormControlEmpty">
    {% for option in options %}
      {% if option.type == 'optgroup' %}
        <optgroup label="{{ option.label }}">
          {% for sub_option in option.options %}
            <option value="{{ sub_option.value }}"{{ sub_option.selected ? ' selected="selected"' }}>{{ sub_option.label }}</option>
          {% endfor %}
        </optgroup>
      {% elseif option.type == 'option' %}
        {% if option.value == 'all' %}
          <option value=""
              {{ option.selected ? ' selected=""' }}
                  class="label-option-hidden" value="{{ option.value }}" disabled=""
          ></option>
        {% else %}
          <option value="{{ option.value }}"{{ option.selected ? ' selected="selected"' }}>{{ option.label }}</option>
        {% endif %}
      {% endif %}
    {% endfor %}
  </select>
  <label id="label-{{ element['#id'] }}" class="form-control-placeholder" for="{{ element['#id'] }}">{{ element['#label'] }}</label>
{% endspaceless %}
