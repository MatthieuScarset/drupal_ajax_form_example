{#
/**
 * @file
 * Theme override to display a region.
 *
 * Available variables:
 * - content: The content for this region, typically blocks.
 * - attributes: HTML attributes for the region div.
 * - region: The name of the region variable as defined in the theme's
 *   .info.yml file.
 *
 * @see template_preprocess_region()
 *
 * @ingroup templates
 */
#}
{% set classes = [
  'region',
  'region-' ~ region|clean_class
] %}

{% if content %}

  <div{{ attributes.addClass(classes) }}>
    {{ elements.theme_one_i_onecookiecomplianceblock }}

      {# Begin Top Navbar Menu #}
      <nav class="navbar navbar-dark bg-dark navbar-expand-md supra">
        <div class="container-fluid site-width">

          {% if elements.theme_one_i_topnavbarfr %}
            {{ elements.theme_one_i_topnavbarfr }}
          {% endif %}
          {% if elements.theme_one_i_topnavbaren %}
            {{ elements.theme_one_i_topnavbaren }}
          {% endif %}


          {# TODO : insert here a divider to separate sections #}
          {# Render the top account items on the right #}
          {% if elements.theme_one_i_toprightnavbarfr %}
            {{ elements.theme_one_i_toprightnavbarfr }}
          {% endif %}
          {% if elements.theme_one_i_toprightnavbaren %}
            {{ elements.theme_one_i_toprightnavbaren }}
          {% endif %}

        </div>
      </nav>
      {# End Top navbar #}

      {# Begin Main Mega Menu#}
      <nav id="main_nav" class="main_nav navbar navbar-expand-lg navbar-dark bg-dark" role="navigation">

        <div class="container-fluid site-width">
          <div class="navbar-brand">
            {% if elements.theme_one_i_branding %}
              {{ elements.theme_one_i_branding }}
            {% endif %}
          </div>

          <div class="mega-menu-desktop mega-menu navbar-collapse collapse">
            {% if elements.theme_one_i_mainnavigationfr %}
              {{ elements.theme_one_i_mainnavigationfr }}
            {% endif %}
            {% if elements.theme_one_i_mainnavigationen %}
              {{ elements.theme_one_i_mainnavigationen }}
            {% endif %}
          </div>


          <div class="nav navbar-nav navbar-right ">
            {{ elements.theme_one_i_righticonblock }}
          </div>
        </div>
      </nav>
      {# End Main Mega Menu - Desktop #}
    </div>

{% endif %}
