/**
 * Implements hook_preprocess_HOOK() for HTML document templates.
 * @param $variables
 */
function theme_one_i_preprocess_html(&$variables) {
  global $config;


  $c = Drupal::config("oab.version");
  $version = $c->get('value');
  if(!isset($config['header_env'])){
    $config['header_env'] = "";
  }

  $variables['header_env'] = $config['header_env'];
  $variables['oab_version'] = ' - '.$version;
}

function theme_one_i_preprocess_region(&$variables) {
  // Create the $content variable that templates expect.
  $variables['language'] = \Drupal::languageManager()->getCurrentLanguage()->getId();
}

function theme_one_i_preprocess_page(&$variables)
{
  $request = \Drupal::request();
  $route_match = \Drupal::routeMatch();
  $title = \Drupal::service('title_resolver')
    ->getTitle($request, $route_match->getRouteObject());
  $route_name = \Drupal::routeMatch()->getRouteName();
  //tealium
  $variables['#attached']['drupalSettings']['tealium']['titre_page'] = $title;

  $node = $route_match->getParameter('node');

  //On cache le block Page Title
  if (preg_match('/^view.category_page/', $route_name) || $node ?->bundle() === 'modular_product') {
    $variables['page']['content']['theme_one_i_page_title']['#access'] = FALSE;
  }
}

function theme_one_i_preprocess_views_view(&$variables) {

  /** @var Drupal\views\ViewExecutable $view */
  $view = $variables['view'];
  $id = $view->storage->id();
  //page category de products
  if($id == 'category_page') {
    $variables['#attached']['drupalSettings']['tealium']['type_page'] = 'Category';
    //var_dump(\Drupal::routeMatch()->getParameters()->has('tid'));die();
    if (\Drupal::routeMatch()->getParameters()->has('tid')) {
      /** @var \Drupal\views\Plugin\views\argument\NumericArgument $argument */
      $tid = \Drupal::routeMatch()->getParameters()->get('tid');
      if (null !== ($term = Term::load($tid))) {
        $variables['#attached']['drupalSettings']['tealium']['titre_page'] = $term->getName();
      }
    }
  }
}

function theme_one_i_preprocess_paragraph__module_benefits_item(&$variables) {

  /** @var Paragraph $paragraph */
  $paragraph = $variables['paragraph'];


  if (isset($paragraph)) {
    $parent = $paragraph->getParentEntity();

    if ($parent->bundle() === "module_benefits") {
      $is_numerical = FALSE;

      $field_numerical_benefit = $parent->field_numericals_benefits->value;
      if (isset($field_numerical_benefit) && 1 == $field_numerical_benefit) {
        $is_numerical = TRUE;
      }

      $variables['is_numerical'] = $is_numerical;
    }
  }
}

function theme_one_i_preprocess_paragraph__module_faq(&$variables) {

  /** @var Paragraph $paragraph */
  $paragraph = $variables['paragraph'];

  if (isset($paragraph)) {
    $parent = $paragraph->getParentEntity();
    if (isset($paragraph->field_highlight->value)) {
      $variables['faq_description'] = t($paragraph->field_highlight->value, ['@title' =>$parent->label()]);
    }
  }
}

function theme_one_i_preprocess_paragraph__module_testimonial_item(&$variables) {

  /** @var Paragraph $paragraph */
  $paragraph = $variables['paragraph'];

  $testimonial_number = 0;

  if (isset($paragraph)) {
    $parent = $paragraph->getParentEntity();
    if(isset($parent->field_testimonial)) {
      $testimonial_number = count($parent->field_testimonial);
    }
  }

  $variables['nb_testimonial'] = $testimonial_number;

}

function theme_one_i_preprocess_node(&$variables) {
  $node_type = $variables['node']->type->entity->get('type');

  if ($node_type === 'modular_product') {
    $variables['#attached']['library'][] = 'theme_one_i/modular_product';
  }

  if($variables['view_mode'] === 'teaser_paragraph_module_blog') {
    $nodeEntity = $variables['node'];

    /** @var OabModularProductService $conf_modular_product */
    $conf_modular_product = \Drupal::service('oab_modular_product.settings');

    //gestion du champ HIGHLIGHT
    if(isset($nodeEntity->field_highlight)) {
      $maxCharsHighlight = $conf_modular_product->getLongDescriptionMaxCharacter();
      $text_highlight = $nodeEntity->field_highlight->value;
      if(strlen($text_highlight) > $maxCharsHighlight) {
        $text_highlight = substr($text_highlight, 0, $maxCharsHighlight) . '...';
      }
      $variables["field_highlight_limit"] = $text_highlight;
    }
    //gestion du champ TITLE
    $text_title = $nodeEntity->label();
    $variables["field_title_limit"] = $text_title;
  }
}

function theme_one_i_preprocess_paragraph__module_detail_offre_items(&$variables) {
//  dd($variables);
  /** @var Paragraph $paragraph */
  $paragraph = $variables['paragraph'];

  $variables['formule_package'] = ProductFormuleEntity::load($paragraph->field_formule->target_id ?? 0);
}

